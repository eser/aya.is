{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Webclient: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "node --run dev"
    },
    {
      "name": "Webclient: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Webclient: debug client-side (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Webclient: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/webclient/node_modules/next/dist/bin/next",
      "runtimeArgs": [
        "--inspect"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/webclient"
      }
    }
  ]
}
